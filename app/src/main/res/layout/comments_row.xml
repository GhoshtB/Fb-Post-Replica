<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padd_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_person"/>

        <LinearLayout
            android:id="@+id/llcm"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
           android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:background="@drawable/rect_grey"
                android:padding="@dimen/padd_10"
                android:layout_gravity="start">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/padd_5"
                    android:text="Person"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medm"
                    android:textStyle="normal"
                    android:gravity="start"
                    android:maxLines="1"
                    android:drawablePadding="@dimen/padd_5" />
                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/padd_5"
                    android:text="like"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal"
                    android:gravity="start"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:drawablePadding="@dimen/padd_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               android:weightSum="3" >

                <TextView
                    android:id="@+id/tvlike"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padd_10"
                    android:text="like"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/tvcmnts"/>

                <TextView
                    android:id="@+id/tvcmnts"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padd_10"
                    android:text="Comment"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal"
                    android:layout_toLeftOf="@id/tvShares"/>

                <TextView
                    android:id="@+id/tvShares"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padd_10"
                    android:text="Share"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small"
                    android:textStyle="normal"
                    android:drawablePadding="@dimen/padd_10"
                    android:maxLines="1"
                    android:layout_alignParentEnd="true"
                    android:drawableRight="@drawable/ic_laughing"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>